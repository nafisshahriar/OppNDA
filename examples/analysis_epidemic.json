{
    "directories": {
        "report_dir": "reports/epidemic",
        "plots_dir": "plots"
    },
    "data_separator": ":",
    "file_patterns": {
        "report_extension": ".txt"
    },
    "report_types": [
        "MessageStatsReport"
    ],
    "filename_structure": {
        "delimiter": "_",
        "average_files": {
            "report_type_position": 0,
            "router_position": 1,
            "grouping_type_position": -1,
            "value_positions": [
                2
            ]
        },
        "raw_files": {
            "positions": {
                "prefix": 0,
                "router": 1,
                "seed": 2,
                "ttl": 3,
                "buffer": 4,
                "report_type": 5
            }
        }
    },
    "grouping_labels": {
        "ttl": "TTL (seconds)",
        "buffer": "Buffer Size (MB)"
    },
    "metrics": {
        "include": [
            "delivery_prob",
            "overhead_ratio",
            "latency_avg"
        ],
        "ignore": [
            "sim_time"
        ]
    },
    "plot_thresholds": {
        "min_values_for_line": 2,
        "min_values_for_surface": 3,
        "min_files_for_heatmap": 2
    },
    "plot_settings": {
        "3d_surface": {
            "size": [
                14,
                10
            ],
            "font_sizes": {
                "axis_label": 24,
                "ticks": 18,
                "colorbar": 20
            },
            "style": {
                "cmap": "viridis",
                "edge_color": "black",
                "line_width": 0.5,
                "alpha": 0.9
            },
            "view": {
                "elev": 30,
                "azim": 135
            }
        },
        "line_plots": {
            "size": [
                10,
                6
            ],
            "font_sizes": {
                "axis_label": 16,
                "ticks": 14,
                "legend": 12
            },
            "markers": [
                "o",
                "s",
                "^",
                "D"
            ],
            "marker_size": 12
        }
    },
    "enabled_plots": {
        "3d_surface": true,
        "line_plots": true,
        "violin_plots": false,
        "heatmaps": true,
        "pairplot": false,
        "export_csv": true
    }
}