{
    "directories": {
        "report_dir": "reports/comparison",
        "plots_dir": "plots/comparison"
    },
    "data_separator": ":",
    "file_patterns": {
        "report_extension": ".txt"
    },
    "report_types": [
        "MessageStatsReport",
        "CCNApplicationReport"
    ],
    "filename_structure": {
        "delimiter": "_",
        "average_files": {
            "report_type_position": 0,
            "router_position": 1,
            "grouping_type_position": -1,
            "value_positions": [
                2,
                3
            ]
        },
        "raw_files": {
            "positions": {
                "prefix": 0,
                "router": 1,
                "seed": 2,
                "ttl": 3,
                "buffer": 4,
                "distro": 5,
                "report_type": 6
            }
        }
    },
    "grouping_labels": {
        "ttl": "TTL (seconds)",
        "buffer": "Buffer Size (MB)",
        "distro": "Query Distribution"
    },
    "metrics": {
        "include": [],
        "ignore": [
            "sim_time",
            "started"
        ]
    },
    "plot_thresholds": {
        "min_values_for_line": 2,
        "min_values_for_surface": 3,
        "min_files_for_heatmap": 2
    },
    "plot_settings": {
        "3d_surface": {
            "size": [
                18,
                12
            ],
            "font_sizes": {
                "axis_label": 30,
                "ticks": 25,
                "colorbar": 30
            },
            "style": {
                "cmap": "flare",
                "edge_color": "black",
                "line_width": 1.5,
                "alpha": 0.92
            },
            "view": {
                "elev": 30,
                "azim": 140
            }
        },
        "line_plots": {
            "size": [
                12,
                7
            ],
            "font_sizes": {
                "axis_label": 20,
                "ticks": 18,
                "legend": 16
            },
            "markers": [
                "o",
                "s",
                "^",
                "D",
                "v",
                "*"
            ],
            "marker_size": 15
        },
        "violin_plots": {
            "size": [
                30,
                18
            ],
            "font_sizes": {
                "axis_label": 60,
                "ticks": 55
            },
            "style": {
                "inner": "quartile",
                "line_width": 4,
                "width": 0.9,
                "palette": "Spectral"
            }
        }
    },
    "enabled_plots": {
        "3d_surface": true,
        "line_plots": true,
        "violin_plots": true,
        "heatmaps": true,
        "pairplot": true,
        "export_csv": true
    }
}